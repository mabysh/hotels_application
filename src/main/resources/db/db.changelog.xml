<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<changeSet author="mabysh" id="hotels_init">
		<!-- ================================= Hotels ================================= -->
		<createTable tableName="HOTEL">
			<column autoIncrement="true" name="ID" type="BIGINT">
				<constraints primaryKey="true" />
			</column>
			<column name="OPTLOCK" type="BIGINT" />
			<column name="NAME" type="VARCHAR(255)" />
			<column name="ADDRESS" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
			<column name="RATING" type="INT">
				<constraints nullable="false" />
			</column>
			<column name="OPERATES_FROM" type="BIGINT">
				<constraints nullable="false" />
			</column>
			<column name="CATEGORY_ID" type="VARCHAR(255)"/>
			<column name="URL" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
	<!-- Change category type -->
	<changeSet id="category_update" author="mabysh">
		<modifyDataType tableName="HOTEL" columnName="CATEGORY_ID" newDataType="BIGINT" />
		<rollback>
			<modifyDataType tableName="HOTEL" columnName="CATEGORY_ID" newDataType="VARCHAR(255)" />
		</rollback>
	</changeSet>
	<!-- Add name null constraint -->
	<changeSet id="name_update" author="mabysh">
		<addNotNullConstraint tableName="HOTEL" columnName="NAME" columnDataType="VARCHAR(255)" defaultNullValue="Null" />
		<rollback>
			<dropNotNullConstraint tableName="HOTEL" columnName="NAME"/>
		</rollback>
	</changeSet>
	<!-- Add description column -->
	<changeSet id="description_create" author="mabysh">
		<addColumn tableName="HOTEL">
			<column name="DESCRIPTION" type="TEXT" />
		</addColumn>
	</changeSet>
	<!-- Create category table -->
	<changeSet id="category_init" author="mabysh">
		<!-- ================================= Categories ================================= -->
		<createTable tableName="CATEGORY">
			<column name="ID" autoIncrement="true" type="BIGINT">
				<constraints primaryKey="true" />
			</column>
			<column name="NAME" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
			<column name="OPTLOCK" type="BIGINT" />
		</createTable>
	</changeSet>
    <!-- Add reference to category id column -->
	<changeSet id="fk_constraints" author="mabysh">
		<addForeignKeyConstraint baseTableName="HOTEL"
								 baseColumnNames="CATEGORY_ID"
								 constraintName="fk_hotel_category"
								 referencedTableName="CATEGORY"
								 referencedColumnNames="ID"
								onDelete="SET NULL"	/>

	</changeSet>
</databaseChangeLog>